<label>Title for the house: </label>
<%= text_field_tag :'house[name]', value=@house.name%><br>

<label>Price per night (US dollars): </label>
$ <%= text_field_tag :'house[price_per_night]', value=@house.price_per_night%><br>

<label>City: </label>
<%= text_field_tag :'house[city]', value=@house.city%><br>

<label>Maximum number of guests allowed: </label>
<%= text_field_tag :'house[max_guests]', value=@house.max_guests%><br>

<label>Description: </label>
<%= text_field_tag :'house[description]', value=@house.description, :size => 100%><br>

<label>Ammenities: </label>
<%= text_field_tag :'house[amenities]', value=@house.amenities, :size =>50%><br>

<label>Are pets allowed? Yes if checked:</label>
<%= hidden_field_tag :'house[pets_allowed]', false %>
<%= check_box_tag :'house[pets_allowed]', true, @house.pets_allowed %><br>
